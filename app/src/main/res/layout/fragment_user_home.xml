<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".UserHome">

    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="5pt">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/salutation">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Good morning, User"
                    style="@style/TextAppearance.AppCompat.Headline"
                    android:fontFamily="@font/roboto"
                    android:letterSpacing=".05"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="4"
                android:orientation="horizontal"
                android:id="@+id/main_opts"
                android:layout_marginTop="10pt">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_weight="2"
                    android:layout_marginRight="4pt">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="40pt"
                        android:orientation="horizontal"
                        android:layout_weight="2">

                        <androidx.cardview.widget.CardView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            app:cardCornerRadius="12sp"
                            app:cardBackgroundColor="@color/grey_5"
                            app:cardElevation="0dp">

                            <LinearLayout
                                android:layout_margin="3pt"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:weightSum="4">

                                <RelativeLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:layout_weight="2"
                                    android:gravity="bottom">

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="Ride..."
                                        style="@style/TextAppearance.AppCompat.Body1"/>

                                </RelativeLayout>

                                <ImageView
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:src="@drawable/ic_directions_car"
                                    android:layout_weight="2"/>

                            </LinearLayout>

                        </androidx.cardview.widget.CardView>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginTop="5pt"
                        android:weightSum="4">

                        <androidx.cardview.widget.CardView
                            android:layout_width="30pt"
                            android:layout_height="30pt"
                            app:cardCornerRadius="12sp"
                            app:cardBackgroundColor="@color/grey_5"
                            app:cardElevation="0dp"
                            android:layout_weight="2"
                            android:layout_marginEnd="4pt"
                            android:layout_marginRight="4pt">

                            <ImageView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_weight="2"
                                android:src="@drawable/ic_close_black_48dp"/>

                        </androidx.cardview.widget.CardView>

                        <androidx.cardview.widget.CardView
                            android:layout_width="30pt"
                            android:layout_height="30pt"
                            app:cardCornerRadius="12sp"
                            app:cardBackgroundColor="@color/grey_5"
                            app:cardElevation="0dp"
                            android:layout_weight="2"
                            android:layout_marginStart="4pt"
                            android:layout_marginLeft="4pt">

                            <ImageView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_weight="2"
                                android:layout_gravity="center"
                                android:src="@drawable/ic_bike_facility"/>

                        </androidx.cardview.widget.CardView>

                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_weight="2"
                    android:layout_marginLeft="4pt">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="40pt"
                        android:orientation="horizontal"
                        android:layout_weight="2">

                        <androidx.cardview.widget.CardView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            app:cardCornerRadius="12sp"
                            app:cardBackgroundColor="@color/grey_5"
                            app:cardElevation="0dp">

                            <LinearLayout
                                android:layout_margin="3pt"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:weightSum="4">

                                <RelativeLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:layout_weight="2"
                                    android:gravity="bottom">

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="Eat..."
                                        style="@style/TextAppearance.AppCompat.Body1"/>

                                </RelativeLayout>

                                <ImageView
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:src="@drawable/ic_baseline_fastfood"
                                    android:layout_weight="2"/>

                            </LinearLayout>

                        </androidx.cardview.widget.CardView>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginTop="5pt"
                        android:weightSum="4">

                        <androidx.cardview.widget.CardView
                            android:layout_width="30pt"
                            android:layout_height="30pt"
                            app:cardCornerRadius="12sp"
                            app:cardBackgroundColor="@color/grey_5"
                            app:cardElevation="0dp"
                            android:layout_weight="2"
                            android:layout_marginEnd="4pt"
                            android:layout_marginRight="4pt">

                            <ImageView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_weight="2"
                                android:src="@drawable/ic_baseline_calendar"/>

                        </androidx.cardview.widget.CardView>

                        <androidx.cardview.widget.CardView
                            android:layout_width="30pt"
                            android:layout_height="30pt"
                            app:cardCornerRadius="12sp"
                            app:cardBackgroundColor="@color/grey_5"
                            app:cardElevation="0dp"
                            android:layout_weight="2"
                            android:layout_marginStart="4pt"
                            android:layout_marginLeft="4pt">

                            <ImageView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_weight="2"
                                android:layout_gravity="center"
                                android:src="@drawable/ic_close_black_48dp"/>

                        </androidx.cardview.widget.CardView>

                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

    </androidx.coordinatorlayout.widget.CoordinatorLayout>

</FrameLayout>